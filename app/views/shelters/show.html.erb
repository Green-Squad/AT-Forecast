  <% content_for :sidebar do %>
    <section id="shelter-info">
      <h2 class="brand-tagline">
        <%= @shelter.name %>
      </h2>
      <p class="brand-tagline">
        NOBO Mile <%= @shelter.mileage %>
      </p>
      <p class="brand-tagline">
        <%= @shelter.elevation %> ft
      </p>
    </section>
  <% end %>

  <% if @weather_days.first.first.low < 35 %>
    <div class="alert alert-danger"><strong>Freeze Warning!</strong> Sleep with your water filter tonight to prevent it from freezing.</div>
  <% end %>
  <% @weather_days.each do |all_weather| %>
    <% weather = all_weather.first %>
    <% hourly_weather = all_weather.last %>
    <h2 class="content-subhead"><%= weather.weather_date.strftime("%A %B %-d, %Y") %></h2>
    <table class="pure-table pure-table-striped fill-width">
      <tr class="tr-header">
        <th>Time</th>
        <th>Temp (&deg;F)</th>
        <th>Description</th>
        <th>Wind</th>
      </tr>
      <tr class="hourly-header table-align-left">
        <th><strong><%= weather.weather_date.strftime("%a %m/%d") %></strong></th>
        <th><%= weather.high %>&deg;/<%= weather.low %>&deg;</th>
        <th><%= weather.description %></th>
        <th><%= weather.wind %></th>
      </tr>
      <% if hourly_weather.empty? %>
      <tr>
        <td>N/A</td>
        <td>N/A</td>
        <td>No hourly weather available.</td>
        <td>N/A</td>
      </tr>
      <% else %>
        <% hourly_weather.each do |hour| %>
          <tr>
            <td><%= hour.date.strftime("%l:%M %p") %> </td>
            <td><%= hour.temp %>&deg;</td>
            <td><%= hour.description %></td>
            <td><%= hour.wind %></td>
          </tr>
        <% end %>
      <% end %>
      </table>
    <% end %>
<%= link_to("Previous", @shelter.previous, class: "pure-button pure-button-primary") unless @shelter.previous.nil? %>
<%= link_to("Next", @shelter.next, class: "pure-button pure-button-primary") unless @shelter.next.nil? %>
